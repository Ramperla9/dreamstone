<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>
  {% block title %}
  {{ constant('App\\Utils\\Project::PROJECT_NAME') }}
  {% if pageTitle is defined %}
  :: {{ pageTitle }}
  {% endif %}
  {% endblock %}
  </title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

  <link rel="apple-touch-icon" sizes="57x57" href="{{ asset('/apple-icon-57x57.png') }}">
  <link rel="apple-touch-icon" sizes="60x60" href="{{ asset('/apple-icon-60x60.png') }}">
  <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('/apple-icon-72x72.png') }}">
  <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('/apple-icon-76x76.png') }}">
  <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('/apple-icon-114x114.png') }}">
  <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('/apple-icon-120x120.png') }}">
  <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('/apple-icon-144x144.png') }}">
  <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('/apple-icon-152x152.png') }}">
  <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('/apple-icon-180x180.png') }}">
  <link rel="icon" type="image/png" sizes="192x192"  href="{{ asset('/android-icon-192x192.png') }}">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('/favicon-32x32.png') }}">
  <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('/favicon-96x96.png') }}">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('/favicon-16x16.png') }}">
  <link rel="manifest" href="{{ asset('/manifest.json') }}">
  <meta name="msapplication-TileColor" content="#ffffff">
  <meta name="msapplication-TileImage" content="{{ asset('/ms-icon-144x144.png') }}">
  <meta name="theme-color" content="#ffffff">
  {% block stylesheets %}{% endblock %}
</head>

<body class="hold-transition skin-black-light sidebar-mini">
<div class="wrapper">
  <header class="main-header">
    <a href="{{ path('homepage') }}" class="logo">
      <span class="logo-mini">
        <img src="{{ asset('/assets/dist/img/logo-menu-mini.png') }}" alt="Dreamstone" class="img-responsive" style="margin: 5px auto 0 auto">
      </span>
      <span class="logo-lg">
        <img src="{{ asset('/assets/dist/img/logo-menu-mini.png') }}" alt="Dreamstone" style="margin-top: -5px; position: relative;">
      </span>
    </a>

    <nav class="navbar navbar-static-top" role="navigation">
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img src="/uploads/{{ app.user.photo }}" class="user-image" alt="Avatar">
              <span class="hidden-xs">{{ app.user.name }}</span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <img src="/uploads/{{ app.user.photo }}" class="img-circle" alt="Avatar">
                <p>
                  {{ app.user.name }}
                </p>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <a href="{{ path('administrators-profile', {id: app.user.id}) }}" class="btn btn-default btn-flat">{{ "my_profile"|trans }}</a>
                </div>
                <div class="pull-right">
                  <a href="{{ path('logout') }}" class="btn btn-default btn-flat">{{ "logout"|trans }}</a>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>
  <aside class="main-sidebar">

    <section class="sidebar">
      <ul class="sidebar-menu">
        <li class="treeview">
          <a href="#"><i class="fa fa-user"></i> <span>{{ "administrators"|trans }}</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="{{ path('administrators-list') }}">{{ "list"|trans }}</a></li>
{% if is_granted('ROLE_SUPER_ADMIN') %}
            <li><a href="{{ path('administrators-create') }}">{{ "create"|trans }}</a></li>
{% endif %}
          </ul>
        </li>

{% if is_granted('ROLE_SUPER_ADMIN') %}
        <li class="treeview">
          <a href="#"><i class="fa fa-file-text"></i> <span>{{ "pages"|trans }}</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="{{ path('pages-list') }}">{{ "list"|trans }}</a></li>
            <li><a href="{{ path('pages-create') }}">{{ "create"|trans }}</a></li>
          </ul>
        </li>

        <li class="treeview">
          <a href="#"><i class="fa fa-list"></i> <span>{{ "sections"|trans }}</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="{{ path('sections-list') }}">{{ "list"|trans }}</a></li>
            <li><a href="{{ path('sections-create') }}">{{ "create"|trans }}</a></li>
          </ul>
        </li>
{% endif %}

        <li class="treeview">
          <a href="#"><i class="fa fa-newspaper-o"></i> <span>{{ "posts"|trans }}</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="{{ path('posts-list') }}">{{ "list"|trans }}</a></li>
{% if is_granted('ROLE_AUTHOR') %}
                <li><a href="{{ path('posts-create') }}">{{ "create"|trans }}</a></li>
{% endif %}
          </ul>
        </li>
      </ul>
    </section>
  </aside>

  <div class="content-wrapper">
    <section class="content-header">
    {% if pageTitle is defined %}
      <h1>{{ pageTitle }}</h1>
    {% endif %}
    </section>

    <section class="content">

    {% block body %}{% endblock %}
    </section>
  </div>

  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      {{ constant('App\\Utils\\Project::SYSTEM_VERSION') }}
    </div>
    &nbsp;
  </footer>
  <div class="control-sidebar-bg"></div>
</div>
<script src="{{ asset('build/js/app.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
