{% extends 'dreamstone/base.html.twig' %}

{% block body %}
<div class="row">
  <div class="col-xs-12">
    <div class="box box-primary">
      <div class="box-body no-padding">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>{{ "title"|trans }}</th>
              <th>{{ "show_on_menu"|trans }}</th>
              <th><i class="glyphicon glyphicon-option-vertical"></i></th>
            </tr>
          </thead>
          <tbody>
{% for page in pages %}
            <tr>
              <td>{{ page.title }}</td>
              <td>{{ page.showOnMenu ? 'yes'|trans : 'no'|trans }}</td>
              <td class="btn-group">
                <a href="{{ path('pages-edit', {'id': page.id}) }}" class="btn btn-default">
                  <i class="glyphicon glyphicon-pencil"></i>
                </a>
                <a href="{{ path('page-switch-status') }}"
                   data-id="{{ page.id }}"
                   data-enable-message="{{ "message_confirm_enable"|trans }}"
                   data-disable-message="{{ "message_confirm_disable"|trans }}"
                   data-status="{{ page.status }}"
                   class="status-change-button btn btn-{% if page.status %}success{% else %}danger{% endif %}"
                >
                  <i class="fa fa-{% if page.status %}check{% else %}times{% endif %}-circle"></i>
                </a>
              </td>
            </tr>

{% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
