{% extends 'dreamstone/base.html.twig' %}

{% block body %}

<div class="row">
  <div class="col-xs-12">
    <div class="box box-primary">
      <div class="box-body">
{% if response.message is defined %}
<div class="alert alert-success">
{{ response.message }}
</div>
{% endif %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{{ form_start(form) }}

<div class="row">
    <div class="col-xs-12 col-sm-4">
        {{ form_row(form.title) }}
    </div>
    <div class="col-xs-12 col-sm-4">
        {{ form_row(form.slug) }}
    </div>

    <div class="col-xs-12 col-sm-4">
        {{ form_row(form.color) }}
    </div>
</div>

          <div class="row">
              <div class="col-xs-12 col-md-6">
                  {{ form_row(form.featuredImage) }}
                  <a href="#" class="thumbnail">
                      {% if page.featuredImage is defined %}
                          <img src="/uploads/pages/p/{{ page.featuredImage }}" class="img-responsive">
                      {% endif %}
                  </a>
              </div>

              <div class="col-xs-12 col-md-6">
                  {{ form_row(form.shareImage) }}
                  <a href="#" class="thumbnail">
                      {% if page.shareImage is defined %}
                          <img src="/uploads/pages/{{ page.shareImage }}" class="img-responsive">
                      {% endif %}
                  </a>
              </div>
          </div>
{{ form_row(form.content) }}
{{ form_row(form.sidebar) }}
{{ form_row(form.showOnMenu) }}
{{ form_end(form) }}
      </div>
    </div>
  </div>
</div>

{% endblock %}

{% block stylesheets %}
{% endblock %}
